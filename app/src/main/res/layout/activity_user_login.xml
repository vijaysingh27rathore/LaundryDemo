<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:orientation="vertical"
    android:onClick="rootLayoutTapped"
    android:background="@drawable/img7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganesh_cleaner"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <EditText
            android:id="@+id/username_UsrLogAct"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColorHint="#fff"
            android:textColorLink="#fff"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Username"
            android:textColor="#fff"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person"
            />

        <EditText
            android:id="@+id/usr_passwd_UsrLogAct"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColorHint="#fff"
            android:textColorLink="#fff"
            android:background="@drawable/edit_text_border"
            android:hint=" Enter Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            />

        <Button
            android:id="@+id/btn_login_UsrLogAct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:inputType="text"
            android:text="Log In"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#9298"
            android:textStyle="bold"
            android:longClickable="false"
            android:onClick="onClick"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center|bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by RANAUS \u00a9 ~ 2019"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>

</LinearLayout>